from flask import Flask, render_template, request, redirect, url_for, flash

app = Flask(__name__)
app.secret_key = 'your_secret_key'  # Needed for session management

# Initialize a simple account balance
account_balance = 1000.00  # Example initial balance

@app.route('/')
def index():
    return render_template('index.html', balance=account_balance)

@app.route('/transaction', methods=['GET', 'POST'])
def transaction():
    global account_balance
    if request.method == 'POST':
        amount = float(request.form['amount'])
        action = request.form['action']

        if action == 'Deposit':
            account_balance += amount
            flash(f'Deposited: ${amount:.2f}')
        elif action == 'Withdraw':
            if amount <= account_balance:
                account_balance -= amount
                flash(f'Withdrew: ${amount:.2f}')
            else:
                flash('Insufficient funds for withdrawal!', 'error')

        return redirect(url_for('index'))

    return render_template('transaction.html')

if __name__ == '__main__':
    app.run(debug=True)